rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // PRODUTOS - Leitura pública, escrita autenticada
    // ============================================
    match /products/{productId} {
      // Qualquer um pode ler produtos (site público precisa)
      allow read: if true;
      
      // Apenas usuários autenticados podem criar/atualizar/deletar
      allow create: if request.auth != null
                    && request.resource.data.keys().hasAll(['name', 'price', 'category'])
                    && request.resource.data.price is number
                    && request.resource.data.price > 0;
      
      allow update: if request.auth != null
                    && request.resource.data.price is number
                    && request.resource.data.price > 0;
      
      allow delete: if request.auth != null;
    }
    
    // ============================================
    // CATEGORIAS - Leitura pública, escrita autenticada
    // ============================================
    match /categories/{categoryId} {
      // Qualquer um pode ler categorias (site público precisa)
      allow read: if true;
      
      // Apenas usuários autenticados podem gerenciar categorias
      allow create, update, delete: if request.auth != null;
    }
    
    // ============================================
    // CONFIGURAÇÕES - Apenas leitura/escrita autenticada
    // ============================================
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
    
    // ============================================
    // BLOQUEIO PADRÃO - Nega acesso a qualquer outra coleção
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
